<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Custom theme for Nokia X to resemble the preinstalled apps more closely. -->
    <style name="AppTheme.Nokia.Light" parent="@android:style/Theme.Holo.Light">
        <!-- Set custom ActionBar theme. -->
        <item name="android:actionBarStyle">@style/AppTheme.Nokia.Light.ActionBar</item>
        <!-- Set custom ActionBar tab theme. -->
        <item name="android:actionBarTabBarStyle">@style/AppTheme.Nokia.Light.ActionBar.TabBar</item>
        <item name="android:actionBarTabStyle">@style/AppTheme.Nokia.Light.ActionBar.TabView</item>
        <item name="android:actionBarTabTextStyle">@style/AppTheme.Nokia.Light.ActionBar.TabText</item>
        <!-- Use custom back/up icon. -->
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_nokia_light</item>
        <!-- Remove shadow below action bar. -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- Remove background gradient. -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Set custom ListView theme. -->
        <item name="android:listViewStyle">@style/AppTheme.Nokia.Light.ListView</item>
        <!-- Use custom overflow icon. -->
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.Nokia.Light.ActionButton.Overflow</item>
    </style>
    
    <!-- Custom ActionBar theme. -->
    <style name="AppTheme.Nokia.Light.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <!-- Don't show app icon. -->
        <item name="android:icon">@android:color/transparent</item>
        <!-- Set backgrounds for the action bar, tabs and bottom action bar. -->
        <item name="android:background">#fff</item>
        <item name="android:backgroundStacked">#ececec</item>
        <item name="android:backgroundSplit">#ececec</item>
        <!-- Set color for title text. -->
        <item name="android:titleTextStyle">@style/AppTheme.Nokia.Light.ActionBar.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/AppTheme.Nokia.Light.ActionBar.SubtitleTextStyle</item>
    </style>
    
    <!-- Title text theme. -->
    <style name="AppTheme.Nokia.Light.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">@android:color/holo_blue_light</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="AppTheme.Nokia.Light.ActionBar.SubtitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle.Inverse">
        <item name="android:textColor">@android:color/holo_blue_light</item>
    </style>
    
    <!-- Custom ActionBar tab theme. -->
    <style name="AppTheme.Nokia.Light.ActionBar.TabBar" parent="@android:style/Widget.Holo.Light.ActionBar.TabBar">
        <!-- Disable divider. -->
        <item name="android:divider">@null</item>
    </style>
    <style name="AppTheme.Nokia.Light.ActionBar.TabView" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <!-- Set tab background color. -->
        <item name="android:background">@drawable/ab_tab_indicator_nokia_light</item>
    </style>
    <style name="AppTheme.Nokia.Light.ActionBar.TabText" parent="@android:style/Widget.Holo.Light.ActionBar.TabText">
        <!-- Set tab background and text color. -->
        <item name="android:textColor">@color/ab_tab_text_nokia_light</item>
    </style>
    <!-- Define tab colors. -->
    <color name="ab_tab_bg_nokia_light">#00000000</color>
    <color name="ab_tab_bg_selected_nokia_light">#d7d7d7</color>
    <color name="ab_tab_bg_pressed_nokia_light">#ddd</color>
    <color name="ab_tab_bg_focused_nokia_light">#f0f0f0</color>
    
    <!-- ListView theme. -->
    <style name="AppTheme.Nokia.Light.ListView" parent="@android:style/Widget.Holo.Light.ListView">
        <!-- Disable list divider. -->
        <item name="android:divider">@null</item>
    </style>
    
    <!-- Overflow button style. -->
    <style name="AppTheme.Nokia.Light.ActionButton.Overflow" parent="@android:style/Widget.Holo.Light.ActionButton.Overflow">
	    <item name="android:src">@drawable/ic_ab_overflow_nokia_light</item>
	</style>

</resources>
