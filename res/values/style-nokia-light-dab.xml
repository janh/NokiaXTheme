<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Custom theme for Nokia X to resemble the preinstalled apps more closely. -->
    <style name="AppTheme.Nokia.Light.DarkActionBar" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!-- Set custom ActionBar theme. -->
        <item name="android:actionBarStyle">@style/AppTheme.Nokia.Light.DarkActionBar.ActionBar</item>
        <!-- Set custom ActionBar tab theme. -->
        <item name="android:actionBarTabBarStyle">@style/AppTheme.Nokia.Light.DarkActionBar.ActionBar.TabBar</item>
        <item name="android:actionBarTabStyle">@style/AppTheme.Nokia.Light.DarkActionBar.ActionBar.TabView</item>
        <item name="android:actionBarTabTextStyle">@style/AppTheme.Nokia.Light.DarkActionBar.ActionBar.TabText</item>
        <!-- Use custom back/up icon. -->
        <item name="android:homeAsUpIndicator">@drawable/ic_ab_back_nokia_dark</item>
        <!-- Remove shadow below action bar. -->
        <item name="android:windowContentOverlay">@null</item>
        <!-- Remove background gradient. -->
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Set custom ListView theme. -->
        <item name="android:listViewStyle">@style/AppTheme.Nokia.Light.ListView</item>
        <!-- Use custom overflow icon. -->
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.Nokia.ActionButton.Overflow</item>
    </style>
    
    <!-- Custom ActionBar theme. -->
    <style name="AppTheme.Nokia.Light.DarkActionBar.ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <!-- Don't show app icon. -->
        <item name="android:icon">@android:color/transparent</item>
        <!-- Set backgrounds for the action bar, tabs and bottom action bar. -->
        <item name="android:background">#000</item>
        <item name="android:backgroundStacked">#323232</item>
        <item name="android:backgroundSplit">#323232</item>
        <!-- Set color for title text. -->
        <item name="android:titleTextStyle">@style/AppTheme.Nokia.ActionBar.TitleTextStyle</item>
        <item name="android:subtitleTextStyle">@style/AppTheme.Nokia.ActionBar.SubtitleTextStyle</item>
    </style>
    
    <!-- Custom ActionBar tab theme. -->
    <style name="AppTheme.Nokia.Light.DarkActionBar.ActionBar.TabBar" parent="@android:style/Widget.Holo.Light.ActionBar.TabBar.Inverse">
        <!-- Disable divider. -->
        <item name="android:divider">@null</item>
    </style>
    <style name="AppTheme.Nokia.Light.DarkActionBar.ActionBar.TabView" parent="@android:style/Widget.Holo.Light.ActionBar.TabView.Inverse">
        <!-- Set tab background color. -->
        <item name="android:background">@drawable/ab_tab_indicator_nokia_dark</item>
    </style>
    <style name="AppTheme.Nokia.Light.DarkActionBar.ActionBar.TabText" parent="@android:style/Widget.Holo.Light.ActionBar.TabText.Inverse">
        <!-- Set tab background and text color. -->
        <item name="android:textColor">@color/ab_tab_text_nokia_dark</item>
    </style>

</resources>
